{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <h1> {{ category }} ARTICLES</h1>
        {% for article in articles %}
            <div class="container">
                <ul>
                    <li>{{ article.title }}</li>
                    <li>{{ article.subject }}</li>
                    <li>{{ article.author }}</li>
                    <li><img src="{{ article.image }}"></li>
                </ul>
                {#<a href="{{ path('wild_show', {'slug': article.slug}) }}" type="submit" name="" value="" class="btn mt-auto">See More</a>#}
            </div>
        {% endfor %}
    </div>
{% endblock %}
