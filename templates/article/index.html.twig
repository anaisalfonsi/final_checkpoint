{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="container">
    <h1>ALL ARTICLES</h1>
    {% for article in articles %}
    <div class="container">
        <ul>
            <li>{{ article.title }}</li>
            <li>{{ article.subject }}</li>
            <li>{{ article.author }}</li>
            <li><img src="{{ article.image }}"></li>
            <li>{{ article.category }}</li>
        </ul>
       <a href="{{ path('wild_show', {'slug': article.slug}) }}" type="submit" name="" value="" class="btn mt-auto">See More</a>
    </div>
    {% endfor %}
</div>
{% endblock %}
