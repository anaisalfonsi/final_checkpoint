{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="{{ vich_uploader_asset(user, 'avatarFile')}}" width="200" height="170"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_edit', {'id': user.id}) }}">Edit Profile</a>

    <a href="{{ path('avatar_edit', {'id': user.id}) }}">Change Profile Picture</a>
{% endblock %}
