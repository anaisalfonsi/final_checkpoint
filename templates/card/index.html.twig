{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1 id="big-title-card" class="text-center mr-5">Astro Or Rap</h1>
        <h3 class="text-center oracle-h3">Click on the card below to have a new oracle reading <br>or to find some
            rapper wisdom<medium class="oracle-emojis">🐲🔮</medium></h3>
    <div class="container-fluid">
        <div class="card-deck d-flex justify-content-center">
            {% if random(4) == 1 %}
            <div class="card col-12 col-md-8 col-lg-6 oracle-card">
                <a href="{{ path('card') }}"><img class="card-img-top img-fluid" src="{{ rapperCard.image }}" width="340" height="320" alt="Card img"></a>
                <div class="card-body col-12 col-sm-6 oracle-card-body">
                    <h5 class="card-title">{{rapperCard.rapper}}</h5>
                    <p class="card-text quote-rap">{{ rapperCard.quote}}</p>
                    <h6>Track: <strong>{{ rapperCard.track }}</strong></h6>
                </div>
            </div>
            {% else %}
                <div class="card col-12 col-md-8 col-lg-6 oracle-card">
                    <a href="{{ path('card') }}"><img class="card-img-top img-fluid" src="{{ oracleCard.image }}" width="340" height="320" alt="Card img"></a>
                    <div class="card-body col-12 col-sm-7 oracle-card-body">
                        <h5 class="card-title">{{oracleCard.title}}</h5>
                        <h6 class="quote-rap">{{ oracleCard.quote }}</h6>
                        <p class="card-text">{{ oracleCard.interpretation}}</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="white-space"></div>
{% endblock %}
